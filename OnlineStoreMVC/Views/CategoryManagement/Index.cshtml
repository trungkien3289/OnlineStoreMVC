@model IEnumerable<OnlineStore.Model.Context.Category>

@{
    ViewBag.CurrentPageName = OnlineStore.Infractructure.Utility.AdminNavigateEnum.Category;
    ViewBag.Title = "THÊM DANH MỤC SẢN PHẨM";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<p>@Html.ActionLink("THÊM", "Create")</p>
<p>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</p>
<div class="row table-responsive">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <table class="table">
            <tr>
                <th>
                    TÊN DANH MỤC
                </th>
                <th>
                    ĐƯỜNG DẪN
                </th>
                <th>
                    TRẠNG THÁI
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Url)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.ActionLink("SỬA", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("CHI TIẾT", "Details", new { id = item.Id }) |
                        @Html.ActionLink("XÓA", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

