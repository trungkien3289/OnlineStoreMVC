@model OnlineStore.Model.Context.Category

@{
    ViewBag.CurrentPageName = OnlineStore.Infractructure.Utility.AdminNavigateEnum.Category;
    ViewBag.Title = "TẠO DANH MỤC SẢN PHẨM";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Tên danh mục</label> 
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Danh mục cha</label> 
            <div class="col-md-10">
                @Html.DropDownListFor(model=>model.ParentID, ViewBag.ParentID as SelectList, "Chọn danh mục cha")
                @Html.ValidationMessageFor(model => model.ParentID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Mô tả</label> 
            <div class="col-md-10">
            @Html.TextArea("Description", new { @class = "form-control description-area-60" } )
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Đường dẫn</label> 
            <div class="col-md-10">
                @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Trạng thái</label> 
            <div class="col-md-10">
                <div>
                    @Html.CheckBoxFor(model => model.Status)
                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Giới thiệu sản phẩm trong danh mục</label>
            <div class="col-md-10">
                @Html.TextArea("AdvertisementHtml",  new { @class = "form-control description-area-60" })
                @Html.ValidationMessageFor(model => model.AdvertisementHtml, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="THÊM" class="btn btn-primary" />
                @Html.ActionLink("TRỞ VỀ DANH SÁCH", "Index", null, new {@class="btn btn-default" })
            </div>
        </div>
        
    </div>
}

