@model IEnumerable<OnlineStore.Model.Context.Brand>

@{
    ViewBag.CurrentPageName = OnlineStore.Infractructure.Utility.AdminNavigateEnum.Manufacturer;
    ViewBag.Title = "DANH SÁCH NHÀ CUNG CẤP";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@Scripts.Render("~/bundles/brandManagement")

<p>
    @Html.ActionLink("THÊM", "Create", null, new { @class="btn btn-primary"})
</p>
<p>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</p>
<div class="row table-responsive">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <table class="table">
            <tr>
                <th class="col-large">
                    TÊN
                </th>
                <th>
                    THÔNG TIN NHÀ SẢN XUẤT
                </th>
                <th class="col-maxlarge"></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.ActionLink("SỬA", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("CHI TIẾT", "Details", new { id = item.Id }) |
                        <a onclick="BrandManagement.deleteBrand(@item.Id, '@item.Name')">XÓA</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>


